upstream quickpay_tcp_server {
	least_conn;
{% for backend in groups['webservers'] %}
{% if inventory_hostname != hostvars[backend]['inventory_hostname'] %}
	server {{hostvars[backend]['inventory_hostname']}}:6600 max_fails=1 fail_timeout=1m;
{% else %}
{% endif %}
{% endfor %}
}

